<div class="container">
 <h1 class="mt-4 pb-4 border-bottom">練習内容</h1>  

 <%= form_with(model: @workout) do |f| %>
  <div class="mt-4 row">
    <div class="col-sm-2">
      <%= f.label :task, '練習内容：', class: 'control-label' %>  
    </div>
    <div class="col-sm-10">
      <%= f.text_area :task, class: 'form-control ' %>  
    </div>
  </div>
  
  <div class="mt-4 row">
    <div class="col-sm-2">
      <%= f.label :tday, '日付：', class: 'control-label' %>
    </div>
    <div class="col-sm-10">
      <%= f.date_field :tday, class: 'form-control' %>    
    </div>
  </div>

  <div class="mt-4 mb-4 offset-sm-2 col-sm-10">
    <%= f.submit '作成完了', class: 'btn w-100 btn-success' %>  
  </div>  
 <% end %>

 <div class="d-flex justify-content-end">
    <%= link_to '練習記録一覧ページに戻る', workouts_path %> 
 </div>
</div>