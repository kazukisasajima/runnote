<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  
  
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= toppages_path %>" class="nav-link">プロフィール</a></li>
      <li class="nav-item"><a href="<%= workouts_path %>" class="nav-link active">練習記録</a></li>
      <li class="nav-item"><a href="<%= projects_path %>" class="nav-link">練習計画</a></li>
    </ul>
    
    <div class="d-flex">
      <h1>練習記録一覧</h1>
    <%= link_to '新規作成', new_workout_path, class: "btn btn-primary h-50 mt-1 ms-4" %>
    </div>
    <% if @workouts.any? %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="col-sm-2">日付</th>
            <th>練習内容</th>
          </tr>
        </thead>
        <tbody>
          <% @workouts.each do |workout| %>
            <tr>
              <td><%= link_to workout.tday, workout %></td>
              <td><%= workout.task %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
        <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
