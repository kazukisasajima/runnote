<div class="edit">
  <div class="card">
    <div class="card-header text-center">
      <h4>プロフィール編集</h4>
    </div>
    <div class="card-body">
    <%= form_with(model: current_user) do |f| %>
      <% if f.object.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% f.object.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %> 
  
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="col-sm-2 align-middle text-center"><%= f.label :best, '自己ベスト' %></td>
            <td><%= f.text_area :best, class: 'w-100', placeholder: best_placeholder %></td>
          </tr>
          <tr>
            <td class="col-sm-2 align-middle text-center"><%= f.label :race, '目標大会・種目' %></td>
            <td><%= f.text_area :race, class: 'w-100', placeholder: race_placeholder %></td>
          </tr>
          <tr>
            <td class="col-sm-2 align-middle text-center"><%= f.label :target, '目標タイム' %></td>
            <td><%= f.text_area :target, class: 'w-100', placeholder: target_placeholder %></td>
          </tr>
        </tbody>
      </table>
        <div class="text-center">
          <%= f.submit '編集完了', class: 'btn btn-warning w-25' %>
        </div>
    <% end %>
    </div>
  </div>

  <div class="mt-3">
   <%= link_to '戻る', toppages_path %>
  </div>
</div>
