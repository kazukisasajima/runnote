<div class="container">
  <h1 class="mt-4 pb-4 border-bottom">練習計画作成ページ</h1>

  <%= form_with(model: @project ) do |f| %>
    <div class="mt-4 row">
      <div class="col-sm-2">
        <%= f.label :plan, '練習計画：', class: 'control-label' %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :plan, class: 'form-control' %>
      </div>
    </div>
    
    <div class="mt-4 row">
      <div class="col-sm-2">
        <%= f.label :pday, '日付：', class: 'control-label' %>
      </div>
      <div class="col-sm-10">
        <%= f.date_field :pday, class: 'form-control' %>
      </div>
    </div>
    
    <div class="mt-4 mb-4 offset-sm-2 col-sm-10">
      <%= f.submit '作成完了', class: 'btn w-100 btn-success' %>
    </div>
  <% end %>  
    
    <div class="d-flex justify-content-end">
      <%= link_to '練習計画一覧ページに戻る', projects_path %>
    </div>  
</div>