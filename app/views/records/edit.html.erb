<div class="offset-sm-4 col-sm-4">
  <div class="card">
    <div class="card-header text-center">
      <h4><%= @record.start_time.strftime("%m月%d日") %>の練習内容</h4>
    </div>
    <div class="card-body p-2">
    <%= form_with(model: @record, local: true) do |form| %>
      <div class="title mt-1 mb-2">
        <div class="form-tag">メニュー</div>
        <%= form.text_area :train, class: 'w-100' %>
      </div>
      
      <div class="setting mb-2">
        <div class="form-tag">結果</div>
        <%= form.text_area :result, class: 'w-100' %>
      </div>
      
      <div class="ditail mb-2">
        <div class="form-tag">感想</div>
        <%= form.text_area :review, class: 'w-100' %>
      </div>
    
      <div class="time mb-3">
        <div class="form-tag">日時</div>
        <%= form.datetime_select :start_at %>
      </div>
    
     <div class="submit mt-2 mb-2">
        <%= form.submit '編集完了', class: 'btn btn-warning w-100'  %>
     </div>
     <%= link_to '戻る', records_path, class: 'btn btn-primary w-100' %>
    <% end %>
    </div>
  </div>
</div>